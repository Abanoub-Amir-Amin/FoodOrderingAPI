@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FoodOrderingAPI.DTO.DashboardDto
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var requestVerificationToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
    var activeTab = ViewData["ActiveTab"] as string ?? "restaurant"; // default active tab
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    /* == Dark Mode Customizations == */
    body.dark-mode {
        background-color: #121212;
        color: #eee;
    }
    /* trimmed for brevity - use your original styles here */
</style>

<nav class="navbar navbar-expand-lg navbar-light sticky-top border-bottom">
    <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold fs-4" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin"
                aria-controls="navbarAdmin" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarAdmin">
            <ul class="navbar-nav align-items-center mb-2 mb-lg-0">
                <li class="nav-item">
                    <button id="chatBtn" class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1" type="button" title="Go to Chat">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-text" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h11.793a1 1 0 0 0 .707-1.707L13 10H14a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2z" />
                            <path d="M3 7h10v1H3V7zm0 2h7v1H3v-1z" />
                        </svg>
                        Chat
                    </button>
                </li>
                <li class="nav-item">
                    <button id="darkModeToggle" class="btn btn-outline-dark btn-sm ms-3" type="button" title="Toggle Dark Mode">🌙 Dark Mode</button>
                </li>
                <li class="nav-item">
                    <button id="logoutBtn" class="btn btn-danger btn-sm ms-3" type="button">Log out</button>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid mt-4 px-4">
    <h1 class="mb-4 fw-bold">@ViewData["Title"]</h1>
    <div class="row gx-4">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar shadow-sm rounded-3" style="min-height: 85vh; position: sticky; top: 1rem;">
            <ul class="nav nav-pills flex-column" id="dashboardTabs" role="tablist" aria-orientation="vertical">
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "admin" ? "active" : "")" id="admin-tab" data-bs-toggle="pill" data-bs-target="#admin"
                            type="button" role="tab" aria-controls="admin" aria-selected="@(activeTab == "admin" ? "true" : "false")">
                        Admin Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "restaurant" ? "active" : "")" id="restaurant-tab" data-bs-toggle="pill" data-bs-target="#restaurant"
                            type="button" role="tab" aria-controls="restaurant" aria-selected="@(activeTab == "restaurant" ? "true" : "false")">
                        Restaurant Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "customer" ? "active" : "")" id="customer-tab" data-bs-toggle="pill" data-bs-target="#customer"
                            type="button" role="tab" aria-controls="customer" aria-selected="@(activeTab == "customer" ? "true" : "false")">
                        Customer Control
                    </button>
                </li>
                <li class="nav-item mb-2" role="presentation">
                    <button class="nav-link @(activeTab == "orders" ? "active" : "")" id="orders-tab" data-bs-toggle="pill" data-bs-target="#orders"
                            type="button" role="tab" aria-controls="orders" aria-selected="@(activeTab == "orders" ? "true" : "false")">
                        Orders Control
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(activeTab == "deliveryman" ? "active" : "")" id="deliveryman-tab" data-bs-toggle="pill" data-bs-target="#deliveryman"
                            type="button" role="tab" aria-controls="deliveryman" aria-selected="@(activeTab == "deliveryman" ? "true" : "false")">
                        Delivery Man Control
                    </button>
                </li>
            </ul>
        </nav>
        <!-- Main content -->
        <main class="col-md-10 col-lg-10">
            <div class="tab-content" id="dashboardTabsContent">
                <!-- Restaurants tab -->
                <div class="tab-pane fade @(activeTab == "restaurant" ? "show active" : "")" id="restaurant" role="tabpanel" aria-labelledby="restaurant-tab">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title">Active Restaurants</h2>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Open Hours</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var rest in Model.ActiveRestaurants)
                                        {
                                            <tr>
                                                <td>@rest.RestaurantName</td>
                                                <td>@rest.Location</td>
                                                <td>@rest.OpenHours</td>
                                                <td class="text-center">
                                                    <form asp-action="DeactivateRestaurant" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-warning btn-sm me-1" type="submit" title="Deactivate">Deactivate</button>
                                                    </form>
                                                    <form asp-action="DeleteRestaurant" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-sm mt-4">
                        <div class="card-body">
                            <h2 class="card-title">Inactive Restaurants</h2>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Location</th>
                                            <th>Open Hours</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var rest in Model.InactiveRestaurants)
                                        {
                                            <tr>
                                                <td>@rest.RestaurantName</td>
                                                <td>@rest.Location</td>
                                                <td>@rest.OpenHours</td>
                                                <td class="text-center">
                                                    <form asp-action="ActivateRestaurant" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-success btn-sm me-1" type="submit" title="Activate">Activate</button>
                                                    </form>
                                                    <form asp-action="DeleteRestaurant" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@rest.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="restaurant" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Deliveryman tab -->
                <div class="tab-pane fade @(activeTab == "deliveryman" ? "show active" : "")" id="deliveryman" role="tabpanel" aria-labelledby="deliveryman-tab">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title">Active Delivery Men</h2>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Account Status</th>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var del in Model.ActiveDeliveryMen)
                                        {
                                            <tr>
                                                <td>@del.AccountStatus</td>
                                                <td>@del.User.UserName</td>
                                                <td>@del.User.Email</td>
                                                <td>@del.User.PhoneNumber</td>
                                                <td class="text-center">
                                                    <form asp-action="DeactivateDeliveryMen" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-warning btn-sm me-1" type="submit" title="Deactivate">Deactivate</button>
                                                    </form>
                                                    <form asp-action="DeleteDeliveryMan" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card shadow-sm mt-4">
                        <div class="card-body">
                            <h2 class="card-title">Inactive Delivery Men</h2>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Account Status</th>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var del in Model.InactiveDeliveryMen)
                                        {
                                            <tr>
                                                <td>@del.AccountStatus</td>
                                                <td>@del.User.UserName</td>
                                                <td>@del.User.Email</td>
                                                <td>@del.User.PhoneNumber</td>
                                                <td class="text-center">
                                                    <form asp-action="ActivateDeliveryMen" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-success btn-sm me-1" type="submit" title="Activate">Activate</button>
                                                    </form>
                                                    <form asp-action="DeleteDeliveryMan" method="post" class="d-inline" onsubmit="return confirm('Confirm delete?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@del.User.UserName" />
                                                        <input type="hidden" name="activeTab" value="deliveryman" />
                                                        <button class="btn btn-danger btn-sm" type="submit" title="Delete">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customers tab -->
                <div class="tab-pane fade @(activeTab == "customer" ? "show active" : "")" id="customer" role="tabpanel" aria-labelledby="customer-tab">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title">Customers</h2>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Loyalty Points</th>
                                            <th>Total Orders</th>
                                            <th>Delivered Orders</th>
                                            <th>Cancelled Orders</th>
                                            <th>In-Process Orders</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customer in Model.Customers)
                                        {
                                            <tr>
                                                <td>@customer.UserName</td>
                                                <td>@customer.Email</td>
                                                <td>@customer.TotalOrders</td>
                                                <td>@customer.TotalDeliveredOrders</td>
                                                <td style="min-width:250px;">
                                                    @if (customer.InProcessOrders != null && customer.InProcessOrders.Any())
                                                    {
                                                        <ul class="mb-0 ps-3">
                                                            @foreach (var order in customer.InProcessOrders)
                                                            {
                                                                <li>
                                                                    <strong>Order Date:</strong> @order.OrderDate.ToShortDateString(),
                                                                    <strong>Total:</strong> @order.TotalPrice.ToString("C"),
                                                                    <strong>Status:</strong> @order.Status,
                                                                    <strong>Items:</strong> @string.Join(", ", order.OrderItems.Select(o => $"{o.itemName} (x{o.Quantity})"))
                                                                </li>
                                                            }
                                                        </ul>
                                                    }
                                                    else
                                                    {
                                                        <em>No In-Process Orders</em>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Admin tab -->
                <div class="tab-pane fade @(activeTab == "admin" ? "show active" : "")" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title">Admins</h2>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var admin in Model.Admins)
                                        {
                                            <tr>
                                                <td>@admin.User.UserName</td>
                                                <td>@admin.User.Email</td>
                                                <td>@admin.User.PhoneNumber</td>
                                                <td class="text-center">
                                                    <a asp-action="EditAdmin" asp-route-userId="@admin.User.UserName" class="btn btn-primary btn-sm" title="Update Admin">Update</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders tab -->
                <div class="tab-pane fade @(activeTab == "orders" ? "show active" : "")" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-3">
                                <h2 class="card-title mb-0">Orders</h2>
                                <form method="get" asp-action="Dashboard" asp-route-activeTab="orders" class="d-flex align-items-center gap-2 flex-wrap">
                                    <label for="statusFilter" class="fw-semibold mb-0">Status:</label>
                                    <select id="statusFilter" name="selectedStatus" class="form-select form-select-sm" style="min-width: 180px;">
                                        <option value="">All</option>
                                        @{
                                            var statusList = ViewData["StatusList"] as SelectList;
                                            if (statusList != null)
                                            {
                                                foreach (var item in statusList)
                                                {
                                                    <option value="@item.Value" selected="@(item.Value == Model.SelectedStatus ? "selected" : null)">
                                                        @item.Text
                                                    </option>
                                                }
                                            }
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-primary btn-sm">Filter</button>
                                </form>

                            </div>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Customer</th>
                                            <th>Restaurant ID</th>
                                            <th>Order Date</th>
                                            <th>Status</th>
                                            <th>Total Price</th>
                                            <th>Order Items</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td>@order.Customer.FirstName @order.Customer.LastName</td>
                                                <td>@order.RestaurantID</td>
                                                <td>@order.OrderDate.ToShortDateString()</td>
                                                <td>@order.Status</td>
                                                <td>@order.TotalPrice.ToString("C")</td>
                                                <td>
                                                    <ul class="mb-0 ps-3">
                                                        @foreach (var item in order.OrderItems)
                                                        {
                                                            <li>@item.itemName (@item.Quantity)</li>
                                                        }
                                                    </ul>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Floating AI Chatbot Icon -->
                <button id="floatingChatBtn" title="Chat with AI"
                        style="position: fixed; bottom: 20px; right: 20px; z-index: 1050; border-radius: 50%;
                width: 50px; height: 50px; background-color: #0d6efd; border: none; color: white; box-shadow: 0 0 8px rgba(0,0,0,0.3);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" stroke="currentColor" stroke-width="2" stroke-linejoin="round" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                        <rect x="6" y="7" width="12" height="10" rx="3" ry="3" />
                        <circle cx="9" cy="12" r="1" fill="currentColor" />
                        <circle cx="15" cy="12" r="1" fill="currentColor" />
                        <path d="M8 17h8" />
                        <path d="M10 4h4v3H10z" />
                    </svg>
                </button>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const body = document.body;
    if (localStorage.getItem('darkMode') === 'enabled') {
        body.classList.add('dark-mode');
        darkModeToggle.textContent = '☀️ Light Mode';
    } else {
        darkModeToggle.textContent = '🌙 Dark Mode';
    }
    darkModeToggle.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        if (body.classList.contains('dark-mode')) {
            darkModeToggle.textContent = '☀️ Light Mode';
            localStorage.setItem('darkMode', 'enabled');
        } else {
            darkModeToggle.textContent = '🌙 Dark Mode';
            localStorage.setItem('darkMode', 'disabled');
        }
    });
    document.getElementById('logoutBtn').addEventListener('click', function () {
        fetch('@Url.Action("Logout", "Admin")', {
            method: 'POST',
            headers: {
                'RequestVerificationToken': '@requestVerificationToken',
                'Content-Type': 'application/json'
            },
            credentials: 'same-origin'
        })
            .then(response => {
                if (response.ok) {
                    window.location.href = 'http://localhost:4200/home';
                } else {
                    response.text().then(text => alert('Logout failed: ' + text));
                }
            })
            .catch(err => alert('Logout failed: ' + err.message));
    });
    document.getElementById('chatBtn').addEventListener('click', function () {
        window.location.href = '@Url.Action("AdminChat", "Admin")';
    });
    document.getElementById('floatingChatBtn').addEventListener('click', function () {
        window.location.href = '@Url.Action("AiChatBot", "Admin")';
    });
</script>
